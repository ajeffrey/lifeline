{
  "name": "@ll/server",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "develop": "ts-node-dev -r tsconfig-paths/register -r dotenv/config --watch src src/index.ts",
    "keygen": "mkdir -p keys && ssh-keygen -trsa -b4096 -m pem -N \"\" -f keys/jwt && openssl rsa -in keys/jwt -pubout -outform PEM -out keys/jwt.pub",
    "db-up": "sqlite3 database/db.sqlite3 < database/schema.sql && sqlite3 database/db.sqlite3 < database/seed.sql",
    "db-down": "rm database/db.sqlite3",
    "db": "sqlite3 database/db.sqlite3",
    "bootstrap": "yarn db-down && yarn db-up"
  },
  "dependencies": {
    "@ll/shared": "*",
    "@types/bcryptjs": "^2.4.2",
    "@types/sockjs": "^0.3.31",
    "awesome-typescript-loader": "^5.2.1",
    "bcryptjs": "^2.4.3",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "rxjs": "^6.5.2",
    "sockjs": "^0.3.19",
    "sqlite3": "^4.0.9",
    "ts-node-dev": "^1.0.0-pre.42",
    "uuid": "^3.3.3",
    "webpack": "^4.35.2",
    "webpack-cli": "^3.3.5"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/express": "^4.17.0",
    "@types/jsonwebtoken": "^8.3.3",
    "@types/sqlite3": "^3.1.5",
    "@types/uuid": "^3.4.5",
    "chalk": "^2.4.2",
    "dotenv": "^8.1.0",
    "nodemon": "^1.19.1",
    "tsconfig-paths": "^3.9.0",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-dev-server": "^3.7.2"
  }
}
